@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h4>Danh sách menu quản trị</h4>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            <svg class="stroke-icon">
                                <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="breadcrumb-item"> Chức năng hệ thống</li>
                    <li class="breadcrumb-item active">Menu quản trị</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <h4>Danh sách menu</h4>
                            <p class="f-m-light mt-1">
                                Quản trị danh sách menu động
                            </p>
                        </div>
                        <div class="col-md-6 text-end">
                            <button id="myButton" type="button" data-permission="002002001">Thêm mới</button>
                        </div>
                    </div>



                </div>
                <div class="card-body">
                    <div id="container" class="tree-container"></div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>


    $(document).ready(function () {


        var treeMenu = $("#container").registerTreeView({
            selectMode: '',
            values: [],
            disables: [],
            beforeLoad: null,
            loaded: null,
            url: "/MenuQuanTri/GetMenuItems",
            editCallback: function (ItemId) {
                ChuyenHuong("external", "/MenuQuanTri/Edit/" + ItemId)
            },
            approvedCallback: function (ItemId) {
                $.ajax({
                    url: '/MenuQuanTri/Approved/' + ItemId,
                    method: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        ChuyenHuong("reload")
                    },
                    error: function (xhr, status, error) {
                        showNotification("danger", 'Đã có lỗi xảy ra:', error);
                    }
                });

            },
            peddingCallback: function (ItemId) {
                $.ajax({
                    url: '/MenuQuanTri/Disapproval/' + ItemId,
                    method: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        ChuyenHuong("reload")
                    },
                    error: function (xhr, status, error) {
                        showNotification("danger", 'Đã có lỗi xảy ra:', error);
                    }
                });
            },
            addsubCallback: function (ItemId) {
                ChuyenHuong("external", "/MenuQuanTri/AddSubItem/" + ItemId)
            },
            deleteCallback: function (ItemId) {
                $.ajax({
                    url: '/MenuQuanTri/Delete/' + ItemId,
                    method: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        ChuyenHuong("reload")
                    },
                    error: function (xhr, status, error) {
                        console.log()
                        showNotification("danger", 'Đã có lỗi xảy ra:' + xhr?.responseJSON?.ex_message);
                    }
                });
            },
            onChange: function () {
                // console.log(this.values);
                // console.log(this.selectedNodes);
                // console.log(this.CurrentSelected);
            },
            method: 'GET',
            closeDepth: 3
        });




        $('#myButton').registerButton({
            type: 'primary',
            icon: "fa fa-plus",
            clickHandler: function () {
                return new Promise(function (resolve) {
                    ChuyenHuong("external", "/MenuQuanTri/Edit")
                    resolve();//cờ xác định kết thúc
                });
            }
        });



    })
</script>